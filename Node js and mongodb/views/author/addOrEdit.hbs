<h3>{{viewTitle}}</h3>

<form action="/author" method="POST" autocomplete="off">
    <input type="hidden" name="_id" value="{{author._id}}">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Article</label>
            <input type="text" class="form-control" name="Article" placeholder="Article" value="{{author.Article}}">
        </div>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
        <a class="btn btn-secondary" href="/author/list"><i class="fa fa-list-alt"></i> View All</a>
        <a class="btn btn-secondary" href="/home"><i class="fa fa-list-alt"></i> View All</a>

    </div>
</form>